        <script type="application/javascript">
            const portraitSwitch = document.getElementById("portrait-filter-switch");
            const relationSwitch = document.getElementById("relation-filter-switch");

            function applyEnabledStyle(label) {
                label.classList.remove("text-gray-400");
                label.classList.remove("dark:text-gray-500");

                label.classList.add("text-gray-900");
                label.classList.add("dark:text-gray-300");
            }

            function applyDisabledStyle(label) {
                label.classList.remove("text-gray-900");
                label.classList.remove("dark:text-gray-300");

                label.classList.add("text-gray-400");
                label.classList.add("dark:text-gray-500");
            }

            function enableFilter(filterElementsIds, filterLabelsIds) {
                for (let i = 0; i < filterElementsIds.length; i++) {
                    let element = document.getElementById(filterElementsIds[i]);
                    element.disabled = false;
                }

                // Change the style (classes) for an enabled radio button
                for (let i = 0; i < filterLabelsIds.length; i++) {
                    let label = document.getElementById(filterLabelsIds[i]);
                    applyEnabledStyle(label);
                }
            }

            function disableFilter(filterElementsIds, filterLabelsIds) {
                for (let i = 0; i < filterElementsIds.length; i++) {
                    let element = document.getElementById(filterElementsIds[i]);
                    element.disabled = true;
                }

                // Change the style (classes) for an enabled radio button
                for (let i = 0; i < filterLabelsIds.length; i++) {
                    let label = document.getElementById(filterLabelsIds[i]);
                    applyDisabledStyle(label);
                }
            }

            function findInput(parentNode) {
                // This is a behaviour expected. If it is not correct, then the calling function should be
                // changed, not this one.
                for (let i = 0; i < parentNode.childElementCount; i++) {
                    if (parentNode.children[i].tagName === "INPUT") {
                        return parentNode.children[i];
                    }
                }
            }

            function switchSelection(buttonLabelId) {
                // For simplicity, we will check or uncheck based on the label on the button.
                let buttonLabel = document.getElementById(buttonLabelId);
                let parent = buttonLabel.parentNode;

                let valueToAffect = buttonLabel.innerText === "Tout sélectionner";

                for (let i = 1; i < parent.childElementCount; i++) {
                    let input = findInput(parent.children[i]);
                    input.checked = valueToAffect;
                }

                if (!valueToAffect) {
                    buttonLabel.innerText = "Tout sélectionner";
                } else {
                    buttonLabel.innerText = "Tout désélectionner";
                }
            }

            portraitSwitch.addEventListener('change', () => {
                if (portraitSwitch.checked) {
                    enableFilter(["has-portrait", "not-has-portrait"], ["has-portrait-label", "not-has-portrait-label"]);
                } else {
                    disableFilter(["has-portrait", "not-has-portrait"], ["has-portrait-label", "not-has-portrait-label"]);
                }
            });

            relationSwitch.addEventListener('change', () => {
                if (relationSwitch.checked) {
                    enableFilter(["knows", "appreciates", "not-appreciates", "relation-charac"], ["knows-label", "appreciates-label", "not-appreciates-label"]);
                } else {
                    disableFilter(["knows", "appreciates", "not-appreciates", "relation-charac"], ["knows-label", "appreciates-label", "not-appreciates-label"]);
                }
            });

            {% if get["charac-has-portrait"] is defined %}
            portraitSwitch.click();
            {% endif %}
            {% if get["charac-relation-type"] is defined and get["charac-relation-with"] is defined %}
            relationSwitch.click();
            {% endif %}
        </script>
