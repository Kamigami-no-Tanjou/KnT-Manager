                <button type="button" class="flex items-center justify-between w-full p-6 text-3xl font-medium font-semibold text-gray-900 dark:text-gray-300 text-left border-2 border-gray-200 rounded-t-2xl focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-600 dark:border-gray-700 bg-white dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600" data-accordion-target="#nation-calendar-accordion-body" aria-expanded="false" aria-controls="nation-calendar-accordion-body">
                    <span>Filtrer sur le calendrier</span>
                    <svg data-accordion-icon class="w-6 h-6 rotate-180 shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5"></path>
                    </svg>
                </button>
            </h2>
            <div id="nation-calendar-accordion-body" class="hidden" aria-labelledby="nation-calendar-accordion-heading">
                <div class="px-10 py-6 rounded-b-2xl border-2 border-t-0 border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-700">
                    <button id="nation-calendar-filter-selection" onclick="switchSelection('nation-calendar-filter-selection')" type="button" class="mb-8 mt-3 w-full text-blue-600 hover:text-white border border-blue-700 hover:bg-blue-600 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-2xl px-6 py-4 text-center mr-4 dark:border-blue-500 dark:hover:border-blue-600 dark:text-blue-500 dark:focus:ring-blue-500 dark:focus:border-blue-600">Tout d√©s√©lectionner</button>
                    {% for calendar in headerCalendars %}
                        <div class="flex items-center mb-4">
                            <input
                                    {% if searchType != "nation" or (get["nation-cal-" ~ calendar.getId()] is defined and get["nation-cal-" ~ calendar.getId()] == "true") %}
                                        checked
                                    {% endif %}
                                    id="nation-{{ calendar.getName()|replace({'\'': "_"}) }}" type="checkbox" value="true" name="nation-cal-{{ calendar.getId() }}" class="w-8 h-8 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-4 dark:bg-gray-700 dark:border-gray-600">
                            <label for="nation-{{ calendar.getName()|replace({'\'': "_"}) }}" class="ml-4 text-3xl font-medium text-gray-900 dark:text-gray-300">{{ calendar.getName() }}</label>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>

        <button onclick="applyNationFilters()" type="button" data-drawer-hide="drawer-nation-filters" aria-controls="drawer-nation-filters" class="w-full inline-flex items-center justify-center mt-4 p-4 text-4xl font-medium text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-8 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
            <svg class="w-10 h-10 mr-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z" clip-rule="evenodd" />
            </svg>
            Appliquer les filtres
        </button>
    </div>

    <script type="application/javascript">
        const portraitSwitch = document.getElementById("portrait-filter-switch");
        const relationSwitch = document.getElementById("relation-filter-switch");

        function applyEnabledStyle(label) {
            label.classList.remove("text-gray-400");
            label.classList.remove("dark:text-gray-500");

            label.classList.add("text-gray-900");
            label.classList.add("dark:text-gray-300");
        }

        function applyDisabledStyle(label) {
            label.classList.remove("text-gray-900");
            label.classList.remove("dark:text-gray-300");

            label.classList.add("text-gray-400");
            label.classList.add("dark:text-gray-500");
        }

        function enableFilter(filterElementsIds, filterLabelsIds) {
            for (let i = 0; i < filterElementsIds.length; i++) {
                let element = document.getElementById(filterElementsIds[i]);
                if (element != null) {
                    element.disabled = false;
                }
            }

            // Change the style (classes) for an enabled radio button
            for (let i = 0; i < filterLabelsIds.length; i++) {
                let label = document.getElementById(filterLabelsIds[i]);
                if (label != null) {
                    applyEnabledStyle(label);
                }
            }
        }

        function disableFilter(filterElementsIds, filterLabelsIds) {
            for (let i = 0; i < filterElementsIds.length; i++) {
                let element = document.getElementById(filterElementsIds[i]);
                if (element != null) {
                    element.disabled = true;
                }
            }

            // Change the style (classes) for an enabled radio button
            for (let i = 0; i < filterLabelsIds.length; i++) {
                let label = document.getElementById(filterLabelsIds[i]);
                if (label != null) {
                    applyDisabledStyle(label);
                }
            }
        }

        function findInput(parentNode) {
            // This is a behaviour expected. If it is not correct, then the calling function should be
            // changed, not this one.
            for (let i = 0; i < parentNode.childElementCount; i++) {
                if (parentNode.children[i].tagName === "INPUT") {
                    return parentNode.children[i];
                }
            }
        }

        function switchSelection(buttonLabelId) {
            // For simplicity, we will check or uncheck based on the label on the button.
            let buttonLabel = document.getElementById(buttonLabelId);
            let parent = buttonLabel.parentNode;

            let valueToAffect = buttonLabel.innerText === "Tout s√©lectionner";

            for (let i = 1; i < parent.childElementCount; i++) {
                let input = findInput(parent.children[i]);
                input.checked = valueToAffect;
            }

            if (!valueToAffect) {
                buttonLabel.innerText = "Tout s√©lectionner";
            } else {
                buttonLabel.innerText = "Tout d√©s√©lectionner";
            }
        }

        function applyCharacFilters() {
            document.getElementById("has-portrait-hidden").checked = document.getElementById("has-portrait").checked;
            document.getElementById("not-has-portrait-hidden").checked = document.getElementById("not-has-portrait").checked;
            {% for calendar in headerCalendars %}
                document.getElementById("{{ calendar.getName()|replace({'\'': "_"}) }}-hidden").checked = document.getElementById("{{ calendar.getName()|replace({'\'': "_"}) }}").checked;
            {% endfor %}
            document.getElementById("charac-living-after-hidden").value = document.getElementById("charac-living-after").value;
            document.getElementById("charac-living-before-hidden").value = document.getElementById("charac-living-before").value;
            document.getElementById("charac-potential-above-hidden").value = document.getElementById("charac-potential-above").value;
            document.getElementById("charac-potential-below-hidden").value = document.getElementById("charac-potential-below").value;
            {% for class in classes %}
                document.getElementById("{{ class.getName()|replace({'\'': "_"}) }}-hidden").checked = document.getElementById("{{ class.getName()|replace({'\'': "_"}) }}").checked;
            {% endfor %}
            {% for sex in sexes %}
                document.getElementById("{{ sex|replace({'\'': "_"}) }}-hidden").checked = document.getElementById("{{ sex|replace({'\'': "_"}) }}").checked;
            {% endfor %}
            {% for gender in genders %}
                document.getElementById("{{ gender|replace({'\'': "_"}) }}-hidden").checked = document.getElementById("{{ gender|replace({'\'': "_"}) }}").checked;
            {% endfor %}
            {% for nation in nations %}
                document.getElementById("nat-{{ nation.getName()|replace({'\'': "_"}) }}-hidden").checked = document.getElementById("nat-{{ nation.getName()|replace({'\'': "_"}) }}").checked;
            {% endfor %}
            document.getElementById("charac-height-above-hidden").value = document.getElementById("charac-height-above").value;
            document.getElementById("charac-height-below-hidden").value = document.getElementById("charac-height-below").value;
            {% for magic in magics %}
                document.getElementById("{{ magic.getName()|replace({'\'': "_"}) }}-hidden").checked = document.getElementById("{{ magic.getName()|replace({'\'': "_"}) }}").checked;
            {% endfor %}
            {% for nation in nations %}
                document.getElementById("led-{{ nation.getName()|replace({'\'': "_"}) }}-hidden").checked = document.getElementById("led-{{ nation.getName()|replace({'\'': "_"}) }}").checked;
            {% endfor %}
            document.getElementById("knows-hidden").checked = document.getElementById("knows").checked;
            document.getElementById("appreciates-hidden").checked = document.getElementById("appreciates").checked;
            document.getElementById("not-appreciates-hidden").checked = document.getElementById("not-appreciates").checked;
            document.getElementById("relation-charac-hidden").value = document.getElementById("relation-charac").value;
        }

        function applyMagicFilters() {
            {% for element in elements %}
                document.getElementById("{{ element.getName() }}-hidden").checked = document.getElementById("{{ element.getName() }}").checked;
            {% endfor %}
        }

        function applyMapFilters() {
            {% for nation in nations %}
                document.getElementById("map-{{ nation.getName()|replace({'\'': "_"}) }}-hidden").checked = document.getElementById("map-{{ nation.getName()|replace({'\'': "_"}) }}").checked;
            {% endfor %}
        }

        function applyNationFilters() {
            document.getElementById("nation-existing-before-hidden").value = document.getElementById("nation-existing-before").value;
            document.getElementById("nation-existing-after-hidden").value = document.getElementById("nation-existing-after").value;
            {% for calendar in headerCalendars %}
                document.getElementById("nation-{{ calendar.getName()|replace({'\'': "_"}) }}-hidden").checked = document.getElementById("nation-{{ calendar.getName()|replace({'\'': "_"}) }}").checked;
            {% endfor %}
        }

        portraitSwitch.addEventListener('change', () => {
            if (portraitSwitch.checked) {
                enableFilter(["has-portrait", "not-has-portrait", "has-portrait-hidden", "not-has-portrait-hidden"], ["has-portrait-label", "not-has-portrait-label"]);
            } else {
                disableFilter(["has-portrait", "not-has-portrait", "has-portrait-hidden", "not-has-portrait-hidden"], ["has-portrait-label", "not-has-portrait-label"]);
            }
        });

        relationSwitch.addEventListener('change', () => {
            if (relationSwitch.checked) {
                enableFilter(["knows", "appreciates", "not-appreciates", "relation-charac", "knows-hidden", "appreciates-hidden", "not-appreciates-hidden", "relation-charac-hidden"], ["knows-label", "appreciates-label", "not-appreciates-label"]);
            } else {
                disableFilter(["knows", "appreciates", "not-appreciates", "relation-charac", "knows-hidden", "appreciates-hidden", "not-appreciates-hidden", "relation-charac-hidden"], ["knows-label", "appreciates-label", "not-appreciates-label"]);
            }
        });
    </script>
{% endblock %}