                        <div class="hidden">
                            <input type="text" name="type" value="map" class="hidden"/>
                            {% for nation in nations %}<input id="map-{{ nation.getName()|replace({'\'': "_"}) }}-hidden" type="checkbox" value="true" name="map-nation-{{ nation.getId() }}" {% if searchType != "map" or (get["map-nation-" ~ nation.getId()] is defined and get["map-nation-" ~ nation.getId()] == "true") %} checked {% endif %}/>{% endfor %}
