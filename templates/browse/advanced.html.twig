{% extends 'nav.html.twig' %}

{% block page_content %}
    <style>
        .mb-14 {
            margin-bottom: 3.5rem;
        }

        .mt-36 {
            margin-top: 9rem;
        }

        .rounded-t-10xl {
            border-top-left-radius: 5rem;
            border-top-right-radius: 5rem;
        }

        .text-4\.5xl {
            font-size: 2.5rem;
            line-height: 3.15rem;
        }

        .w-18 {
            width: 4.5rem;
        }

        .swiper-pagination-bullet {
            width: 1rem !important;
            height: 1rem !important;
        }

        .swiper-pagination-bullets {
            bottom: initial !important;
        }
    </style>
    <!-- Link Swiper's CSS -->
    <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css"
    />

    <nav class="flex ml-6 mb-24 lg:hidden">
        <a href="/" class="inline-flex items-center text-3xl lg:text-sm font-medium text-gray-700 hover:text-blue-600 dark:text-gray-400 dark:hover:text-white">
            <svg aria-hidden="true" class="w-12 h-12 rotate-180 mr-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
            Retour au Dashboard
        </a>
    </nav>

    <h3 class="text-7xl font-bold dark:text-white mb-14">Recherche avanc√©e</h3>

    <div class="absolute left-0 w-screen p-10 pt-10 rounded-t-10xl bg-gray-100 dark:bg-gray-800"
         style="min-height: -webkit-fill-available"> <!-- Won't work for firefox, but honestly no one uses firefox on mobiles... -->
        <div class="swiper">
            <div class="h-4 swiper-pagination"></div>
            <div class="swiper-wrapper w-full">
                <div id="characs-slide" class="swiper-slide w-full mt-8">
                    <h4 class="text-6xl font-bold tracking-tight text-gray-900 dark:text-white mb-14">Rechercher parmi les personnages</h4>
                    <form method="get" action="" class="mb-24">
                        <div class="hidden">
                            <input type="text" name="type" value="charac"/>
                            <input disabled id="has-portrait-hidden" name="charac-has-portrait" value="true" type="radio" {% if get["charac-has-portrait"] is defined and get["charac-has-portrait"] == "true" %} checked {% endif %}/>
                            <input disabled id="not-has-portrait-hidden" name="charac-has-portrait" value="false" type="radio" {% if get["charac-has-portrait"] is not defined or (get["charac-has-portrait"] is defined and get["charac-has-portrait"] == "false") %} checked {% endif %}/>
                            {% for calendar in headerCalendars %}<input id="{{ calendar.getName()|replace({'\'': "_"}) }}-hidden" name="charac-cal-{{ calendar.getId() }}" value="true" type="checkbox" {% if searchType != "charac" or (get["charac-cal-" ~ calendar.getId()] is defined and get["charac-cal-" ~ calendar.getId()] == "true") %} checked {% endif %}/>{% endfor %}
                            <input id="charac-living-after-hidden" name="charac-living-after" type="text" {% if get["charac-living-after"] is defined %} value="{{ get["charac-living-after"] }}" {% endif %}/>
                            <input id="charac-living-before-hidden" name="charac-living-before" type="text" {% if get["charac-living-before"] is defined %} value="{{ get["charac-living-before"] }}" {% endif %}/>
                            <input id="charac-potential-above-hidden" name="charac-potential-above" type="number" {% if get["charac-potential-above"] is defined %} value="{{ get["charac-potential-above"] }}" {% endif %}/>
                            <input id="charac-potential-below-hidden" name="charac-potential-below" type="number" {% if get["charac-potential-below"] is defined %} value="{{ get["charac-potential-below"] }}" {% endif %}/>
                            {% for class in classes %}<input id="{{ class.getName()|replace({'\'': "_"}) }}-hidden" name="charac-class-{{ class.getId() }}" value="true" type="checkbox" {% if searchType != "charac" or (get["charac-class-" ~ class.getId()] is defined and get["charac-class-" ~ class.getId()] == "true") %} checked {% endif %}/>{% endfor %}
                            {% for sex in sexes %}<input id="{{ sex|replace({'\'': "_"}) }}-hidden" name="charac-sex-{{ loop.index }}" value="true" type="checkbox" {% if searchType != "charac" or (get["charac-sex-" ~ loop.index] is defined and get["charac-sex-" ~ loop.index] == "true") %} checked {% endif %}/>{% endfor %}
                            {% for gender in genders %}<input id="{{ gender|replace({'\'': "_"}) }}-hidden" name="charac-gender-{{ loop.index }}" value="true" type="checkbox" {% if searchType != "charac" or (get["charac-gender-" ~ loop.index] is defined and get["charac-gender-" ~ loop.index] == "true") %} checked {% endif %}/>{% endfor %}
                            {% for nation in nations %}<input id="nat-{{ nation.getName()|replace({'\'': "_"}) }}-hidden" name="charac-nat-{{ nation.getId() }}" value="true" type="checkbox" {% if searchType != "charac" or (get["charac-nat-" ~ nation.getId()] is defined and get["charac-nat-" ~ nation.getId()] == "true") %} checked {% endif %}/>{% endfor %}
                            <input id="charac-height-above-hidden" name="charac-height-above" type="number" {% if get["charac-height-above"] is defined %} value="{{ get["charac-height-above"] }}" {% endif %}/>
                            <input id="charac-height-below-hidden" name="charac-height-below" type="number" {% if get["charac-height-below"] is defined %} value="{{ get["charac-height-below"] }}" {% endif %}/>
                            {% for magic in magics %}<input id="{{ magic.getName()|replace({'\'': "_"}) }}-hidden" name="charac-mag-{{ magic.getId() }}" value="true" type="checkbox" {% if searchType != "charac" or (get["charac-mag-" ~ magic.getId()] is defined and get["charac-mag-" ~ magic.getId()] == "true") %} checked {% endif %}/>{% endfor %}
                            {% for nation in nations %}<input id="led-{{ nation.getName()|replace({'\'': "_"}) }}-hidden" name="charac-led-{{ nation.getId() }}" value="true" type="checkbox" {% if searchType != "charac" or (get["charac-led-" ~ nation.getId()] is defined and get["charac-led-" ~ nation.getId()] == "true") %} checked {% endif %}/>{% endfor %}
                            <input disabled id="knows-hidden" name="charac-relation-type" value="knows" type="radio" {% if get["charac-relation-type"] is not defined or (get["charac-relation-type"] is defined and get["charac-relation-type"] == "knows") %} checked {% endif %}/>
                            <input disabled id="appreciates-hidden" name="charac-relation-type" value="appreciates" type="radio" {% if get["charac-relation-type"] is defined and get["charac-relation-type"] == "appreciates" %} checked {% endif %}/>
                            <input disabled id="not-appreciates-hidden" name="charac-relation-type" value="not-appreciates" type="radio" {% if get["charac-relation-type"] is defined and get["charac-relation-type"] == "not-appreciates" %} checked {% endif %}/>
                            <select disabled id="relation-charac-hidden" name="charac-relation-with">
                                <!-- default --><option value="0"{% if get["charac-relation-with"] is not defined or (get["charac-relation-with"] is defined and get["charac-relation-with"] == "0") %} selected {% endif %}></option>
                                {% for smolCharac in characList %}<option value="{{ smolCharac.getId() }}"{% if get["charac-relation-with"] is defined and get["charac-relation-with"] == smolCharac.getId() %} selected {% endif %}>{{ smolCharac.getFirstNames() }} {{ smolCharac.getLastNames }}</option>{% endfor %}
                            </select>
                        </div>
                        <input name="search" type="text" class="block w-full p-5 mb-10 text-4xl text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-4 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                               placeholder="Rechercher..."
                                {% if search is not null %}
                                    value="{{ search }}"
                                {% endif %}
                        >

                        <input type="submit" value="Rechercher"
                               class="w-full mb-8 p-4 text-4xl font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-8 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
                        >

                        <button data-drawer-target="drawer-charac-filters" data-drawer-toggle="drawer-charac-filters" aria-controls="drawer-charac-filters" type="button" class="w-full inline-flex items-center justify-center p-4 text-4xl font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-200 focus:text-blue-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700">
                            <svg class="w-8 h-8 mr-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                <path d="M10 3.75a2 2 0 1 0-4 0 2 2 0 0 0 4 0ZM17.25 4.5a.75.75 0 0 0 0-1.5h-5.5a.75.75 0 0 0 0 1.5h5.5ZM5 3.75a.75.75 0 0 1-.75.75h-1.5a.75.75 0 0 1 0-1.5h1.5a.75.75 0 0 1 .75.75ZM4.25 17a.75.75 0 0 0 0-1.5h-1.5a.75.75 0 0 0 0 1.5h1.5ZM17.25 17a.75.75 0 0 0 0-1.5h-5.5a.75.75 0 0 0 0 1.5h5.5ZM9 10a.75.75 0 0 1-.75.75h-5.5a.75.75 0 0 1 0-1.5h5.5A.75.75 0 0 1 9 10ZM17.25 10.75a.75.75 0 0 0 0-1.5h-1.5a.75.75 0 0 0 0 1.5h1.5ZM14 10a2 2 0 1 0-4 0 2 2 0 0 0 4 0ZM10 16.25a2 2 0 1 0-4 0 2 2 0 0 0 4 0Z" />
                            </svg>
                            Affiner la recherche
                        </button>
                    </form>


                    {% if characResults|length < 1 %}
                        <p class="mt-8 text-4xl text-gray-900 dark:text-white">Aucun r√©sultat ne correspond √† votre recherche...</p>
                    {% else %}
                        <div class="grid grid-cols-1 gap-8">
                            {% for charac in characResults %}
                                <div class="w-full p-6 bg-white border-2 border-gray-200 rounded-3xl shadow dark:bg-gray-700 dark:border-gray-700">
                                    <div class="flex flex-row justify-between items-center mb-6">
                                        <a href="/characs/{{ charac.getId() }}">
                                            <h5 class="text-5xl font-bold tracking-tight text-gray-900 dark:text-white">{{ charac.getFirstNames() }} {{ charac.getLastNames() }}</h5>
                                        </a>

                                        <a href="/nations/{{ charac.getOrigin().getId() }}">
                                            <h6 class="text-5xl"><small class="font-semibold text-gray-500 dark:text-gray-400">{{ charac.getOrigin().getName() }}</small></h6>
                                        </a>
                                    </div>

                                    {% if charac.getMagics()|length > 0 %}<h6 class="mb-6 text-4xl font-semibold text-gray-700 dark:text-gray-400">Magie(s) :</h6>{% endif %}
                                    {% for magic in charac.getMagics() %}
                                        <div class="ml-6 mb-6">
                                            <a href="/magics/{{ magic.getId() }}" class="text-4xl font-normal text-gray-700 dark:text-gray-400">{{ magic.getName() }}</a>
                                        </div>
                                    {% endfor %}

                                    <a href="/characs/{{ charac.getId() }}" class="inline-flex items-center justify-center w-full mt-2 px-3 py-3 text-4xl font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-8 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                                        Consulter
                                        <svg class="w-6 h-6 ml-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"></path>
                                        </svg>
                                    </a>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>

                <div id="magics-slide" class="swiper-slide w-full mt-8">
