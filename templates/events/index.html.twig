{% extends 'nav.html.twig' %}

{% block page_content %}
    <nav class="flex mb-4" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
            <li class="inline-flex items-center">
                <a href="/" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600 dark:text-gray-400 dark:hover:text-white">
                    <svg aria-hidden="true" class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path></svg>
                    Dashboard
                </a>
            </li>
            <li aria-current="page">
                <div class="flex items-center">
                    <svg aria-hidden="true" class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
                    <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2 dark:text-gray-400">Événements</span>
                </div>
            </li>
        </ol>
    </nav>

    <div class="mb-4 border-b border-gray-200 dark:border-gray-700 mx-1.5">
        <ul class="flex flex-wrap -mb-px text-sm font-medium text-center" id="myTab" data-tabs-toggle="#myTabContent" role="tablist">
            <li class="mr-2" role="presentation">
                <button class="flex inline-block p-4 border-b-2 rounded-t-lg" id ="period-tab" data-tabs-target="#period" type="button" role="tab" aria-controls="period" aria-selected="false"
                        style="line-height: 2rem">
                    Par période
                </button>
            </li>
            <li class="mr-2" role="presentation">
                <button class="flex inline-block p-4 border-b-2 rounded-t-lg" id ="characs-tab" data-tabs-target="#characs" type="button" role="tab" aria-controls="characs" aria-selected="false"
                        style="line-height: 2rem">
                    Par personnage
                </button>
            </li>
        </ul>
    </div>


    <div id="myTabContent">
        <div class="p-4 rounded-lg bg-gray-100 dark:bg-gray-800" id="period" role="tabpanel" aria-labelledby="period-tab">
            <div class="flex-auto relative overflow-x-auto sm:rounded-lg"
                 style="margin: 0.5rem 1rem 0.5rem 0.75rem; flex: auto">
                <h3 class="text-xl font-bold dark:text-white"
                    style="margin-bottom: 1rem">Liste des événements par période</h3>

                <form method="get" action="" class="flex items-center mb-2">
                    <span class="mx-4 text-gray-500" style="margin-right: 0.5rem">Du</span>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                            <svg aria-hidden="true" class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path></svg>
                        </div>
                        <input name="from" type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                            placeholder="-9999-01-01" style="padding-left: 2.5rem"
                            {% if from is not null %}
                            value="{{ from }}"
                            {% endif %}
                        >
                    </div>
                    <span class="mx-4 text-gray-500" style="margin: 0 0.5rem">au</span>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                            <svg aria-hidden="true" class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path></svg>
                        </div>
                        <input name="to" type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                            placeholder="9999-12-31" style="padding-left: 2.5rem"
                            {% if to is not null %}
                            value="{{ to }}"
                            {% endif %}
                        >
                    </div>
                    <div style="margin-left: 0.75rem">
                        <input type="submit" value="Rechercher"
                           class="inline-flex items-center px-3 py-2 h-10 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
                           style="padding: 0.5rem 0.75rem 0.5rem 0.75rem"
                        >
                    </div>
                </form>
            </div>

            <div class="flex-auto relative overflow-x-auto sm:rounded-lg"
                 style="margin: 0 1rem 0 0.75rem; flex: auto">
                {% if from is not null and to is not null %}
                <h3 class="text-xl font-bold dark:text-white"
                    style="margin: 3rem 0 1rem 0">Résultats de la recherche</h3>

                    <table class="w-full text-sm shadow-md mb-4 text-left text-gray-500 dark:text-gray-400"
                           style="border-bottom-left-radius: 0.5rem; border-bottom-right-radius: 0.5rem">
                        <thead class="text-xs text-gray-700 uppercase bg-gray-200 dark:bg-gray-700 dark:text-gray-400">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-center"
                                style="border-top-left-radius: 0.5rem;
                                       padding-left: 0.5rem; padding-right: 0.25rem">
                                Personnage
                            </th>
                            <th scope="col" class="px-6 py-3 text-center"
                                style="padding-left: 0.25rem; padding-right: 0.25rem">
                                Âge
                            </th>
                            <th scope="col" class="px-6 py-3 text-center"
                                style="padding-left: 0.25rem; padding-right: 0.25rem">
                                Début
                            </th>
                            <th scope="col" class="px-6 py-3 text-center"
                                style="padding-left: 0.25rem; padding-right: 0.25rem">
                                Fin
                            </th>
                            <th scope="col" class="px-6 py-3 text-center"
                                style="border-top-right-radius: 0.5rem;
                                       padding-left: 0.25rem; padding-right: 0.5rem">
                                Événements
                            </th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for event in events %}

                            {% if not loop.last %}
                                <tr class="bg-white border-b dark:bg-gray-900 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
                                        style="padding: 0.5rem 0.25rem 0.5rem 0.5rem">
                                        {{ event.getCharac().getFirstNames() }} {{ event.getCharac().getLastNames() }}
                                    </th>
                                    <td class="text-center" style="padding: 0.5rem 0.25rem">
                                        {{ ages[event.getId()~"-"~event.getCharac().getId()] }}
                                    </td>
                                    <td class="text-center" style="padding: 0.5rem 0.25rem">
                                        {{ event.getStartingDate().format('d/m/Y') }}
                                    </td>
                                    <td class="text-center" style="padding: 0.5rem 0.25rem">
                                        {{ event.getEndingDate().format('d/m/Y') }}
                                    </td>
                                    <td style="padding: 0.5rem 0.5rem 0.5rem 0.25rem">
                                        {{ event.getDescription() }}
                                    </td>
                                </tr>
                            {% endif %}

                        {% endfor %}

                        <!-- Last line! -->
                        <tr class="bg-white dark:bg-gray-900 hover:bg-gray-50 dark:hover:bg-gray-600">
                            {% if events|length > 0 %}
                                {% set event = events|last %}
                                <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
                                    style="border-bottom-left-radius: 0.5rem; padding: 0.5rem 0.25rem 0.5rem 0.5rem">
                                    {{ event.getCharac().getFirstNames() }} {{ event.getCharac().getLastNames() }}
                                </th>
                                <td class="text-center" style="padding: 0.5rem 0.25rem">
                                    {{ ages[event.getId()~"-"~event.getCharac().getId()] }}
                                </td>
                                <td class="text-center" style="padding: 0.5rem 0.25rem">
                                    {{ event.getStartingDate().format('d/m/Y') }}
                                </td>
                                <td class="text-center" style="padding: 0.5rem 0.25rem">
                                    {{ event.getEndingDate().format('d/m/Y') }}
                                </td>
                                <td class="px-6 py-4" style="padding: 0.5rem 0.5rem 0.5rem 0.25rem; border-bottom-right-radius: 0.5rem">
                                    {{ event.getDescription() }}
                                </td>
                            {% else %}
                                <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
                                    colspan="5"
                                    style="border-bottom-left-radius: 0.5rem; padding-top: 0.5rem; padding-bottom: 0.5rem;
                                       border-bottom-right-radius: 0.5rem">
                                    Pas d'événements trouvés à cette période
                                </th>
                            {% endif %}
                        </tr>
                        </tbody>
                    </table>
                {% endif %}
            </div>
        </div>

        <div class="p-4 rounded-lg bg-gray-100 dark:bg-gray-800" id="characs" role="tabpanel" aria-labelledby="characs-tab">
            <div class="flex-auto relative overflow-x-auto sm:rounded-lg"
                 style="margin: 0.5rem 1rem 0 0.75rem; flex: auto">
                <h3 class="text-xl font-bold dark:text-white"
                    style="margin-bottom: 1rem">Liste des personnages avec des événements attachés</h3>

                <table class="w-full text-sm shadow-md mb-4 text-left text-gray-500 dark:text-gray-400"
                       style="border-bottom-right-radius: 0.5rem; border-bottom-left-radius: 0.5rem">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-200 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-center"
                            style="border-top-left-radius: 0.5rem">
                            Nom
                        </th>
                        <th scope="col" class="px-6 py-3 text-center">
                            Naissance
                        </th>
                        <th scope="col" class="px-6 py-3 text-center">
                            Potentiel
                        </th>
                        <th scope="col" class="px-6 py-3 text-center">
                            Première magie
                        </th>
                        <th scope="col" class="px-6 py-3 text-center">
                            Seconde magie
                        </th>
                        <th scope="col" class="px-6 py-3 text-center">
                            Décès
                        </th>
                        <th scope="col" class="px-6 py-3 text-center w-1"
                            style="border-top-right-radius: 0.5rem; min-width: 0.25rem">
                            <span class="sr-only">Consulter</span>
                        </th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for charac in characs %}

                        {% if not loop.last %}
                            <tr class="bg-white border-b dark:bg-gray-900 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                                <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
                                    style="padding-top: 0.5rem; padding-bottom: 0.5rem">
                                    {{ charac.getFirstNames() }} {{ charac.getLastNames() }}
                                </th>
                                <td class="text-center" style="padding-top: 0.5rem; padding-bottom: 0.5rem">
                                    {{ charac.getBirthdate().format('d/m/Y') }}
                                </td>
                                <td class="text-center" style="padding-top: 0.5rem; padding-bottom: 0.5rem">
                                    {% if charac.getMagicalPotential() is not null %}
                                        {{ charac.getMagicalPotential() }} U
                                    {% endif %}
                                </td>
                                <td style="padding-top: 0.5rem; padding-bottom: 0.5rem">
                                    {% if charac.getMagics()|length > 0 %}
                                        <a href="/magics/{{ charac.getMagics()[0].getId() }}" class="font-medium hover:text-gray-600 dark:hover:text-gray-300">
                                            {{ charac.getMagics()[0].getName() }}
                                        </a>
                                    {% endif %}
                                </td>
                                <td class="px-6 py-4" style="padding-top: 0.5rem; padding-bottom: 0.5rem">
                                    {% if charac.getMagics()|length > 1 %}
                                        <a href="/magics/{{ charac.getMagics()[1].getId() }}" class="font-medium hover:text-gray-600 dark:hover:text-gray-300">
                                            {{ charac.getMagics()[1].getName() }}
                                        </a>
                                    {% endif %}
                                </td>
                                <td class="px-6 py-4 text-center"
                                    style="max-width: 350px; padding-top: 0.5rem; padding-bottom: 0.5rem">
                                    {% if charac.getDeathdate() is not null %}
                                        {{ charac.getDeathdate().format('d/m/Y') }}
                                    {% endif %}
                                </td>
                                <td class="px-6 py-4 text-center"
                                    style="padding-top: 0.5rem; padding-bottom: 0.5rem">
                                    <a href="/events/{{ charac.getId() }}" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Consulter</a>
                                </td>
                            </tr>
                        {% endif %}

                    {% endfor %}

                    <!-- Last line! -->
                    <tr class="bg-white dark:bg-gray-900 hover:bg-gray-50 dark:hover:bg-gray-600">
                        {% if characs|length > 0 %}
                            {% set charac = characs|last %}
                            <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
                                style="border-bottom-left-radius: 0.5rem; padding-top: 0.5rem; padding-bottom: 0.5rem">
                                {{ charac.getFirstNames() }} {{ charac.getLastNames() }}
                            </th>
                            <td class="text-center" style="padding-top: 0.5rem; padding-bottom: 0.5rem">
                                {{ charac.getBirthdate().format('d/m/Y') }}
                            </td>
                            <td class="text-center" style="padding-top: 0.5rem; padding-bottom: 0.5rem">
                                {{ charac.getMagicalPotential() }} U
                            </td>
                            <td style="padding-top: 0.5rem; padding-bottom: 0.5rem">
                                <a href="/magics/{{ charac.getMagics()[0].getId() }}" class="font-medium hover:text-gray-600 dark:hover:text-gray-300">
                                    {{ charac.getMagics()[0].getName() }}
                                </a>
                            </td>
                            <td class="px-6 py-4" style="padding-top: 0.5rem; padding-bottom: 0.5rem">
                                {% if charac.getMagics()|length > 1 %}
                                    <a href="/magics/{{ charac.getMagics()[1].getId() }}" class="font-medium hover:text-gray-600 dark:hover:text-gray-300">
                                        {{ charac.getMagics()[1].getName() }}
                                    </a>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 text-center"
                                style="max-width: 350px; padding-top: 0.5rem; padding-bottom: 0.5rem">
                                {% if charac.getDeathdate() is not null %}
                                    {{ charac.getDeathdate().format('d/m/Y') }}
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 text-center"
                                style="border-bottom-right-radius: 0.5rem; padding-top: 0.5rem; padding-bottom: 0.5rem">
                                <a href="/events/{{ charac.getId() }}" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Consulter</a>
                            </td>
                        {% else %}
                            <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
                                colspan="7"
                                style="border-bottom-left-radius: 0.5rem; padding-top: 0.5rem; padding-bottom: 0.5rem;
                                       border-bottom-right-radius: 0.5rem">
                                Pas de personnages ayant des événements...
                            </th>
                        {% endif %}
                    </tr>
                    </tbody>
                </table>
            </div>

            <div class="flex justify-end">
                <p class="text-right text-sm text-gray-900 dark:text-white">Total : {{ characs|length }}</p>
            </div>
        </div>
    </div>
{% endblock %}